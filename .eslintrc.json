{
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }, 
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "always"],
    "brace-style": ["error", "1tbs"],
    "no-use-before-define": ["error", { "functions": true, "variables": true }],
    "keyword-spacing": ["error"]
  }
}